@model Modelos.Animal.Pet

@{
    Layout =  "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = "Registrando um NOVO PET";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="">
            <h4>Pet</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "" })
            <div class="">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "" })
                </div>
            </div>
    
            <div class="">
                @Html.LabelFor(model => model.Idade, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "" } })
                    @Html.ValidationMessageFor(model => model.Idade, "", new { @class = "" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.EspecieId, htmlAttributes: new { @class = "" })
                <div>
                    @Html.DropDownList("EspecieId", null, htmlAttributes: new { @class = "" })
                    @Html.ValidationMessageFor(model => model.EspecieId, "", new { @class = "" })
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.ClienteId,"Dono CPF", htmlAttributes: new { @class = "" })
                <div>
                    @Html.DropDownList("ClienteId", null, htmlAttributes: new { @class = "" })
                    @Html.ValidationMessageFor(model => model.ClienteId, "", new { @class = "" })
                </div>
            </div>

            <div class="">
                @Html.LabelFor(model => model.Sexo, htmlAttributes: new { @class = "" })
                <div class="col-md-10">
                    @Html.EnumDropDownListFor(model => model.Sexo, htmlAttributes: new { @class = "" })
                    @Html.ValidationMessageFor(model => model.Sexo, "", new { @class = "" })
                </div>
             </div>

            <div class="">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Criar" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Voltar à Lista", "Index")
    </div>
</body>
</html>
