@model IEnumerable<Modelos.Animal.Especie>

@{
    Layout =  "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = "LISTAGEM DE ESPÉCIES";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <button type="button" class="btn btn-outline-info">
        @Html.ActionLink("Adicionar Espécie", "Create")
    </button>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.EspecieId }) |
                @Html.ActionLink("Details", "Details", new { id=item.EspecieId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.EspecieId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
